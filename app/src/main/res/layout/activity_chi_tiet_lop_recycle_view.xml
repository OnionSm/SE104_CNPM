<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    tools:context=".ChiTietLopRecycleView">

    <ImageView
        android:id="@+id/cham_thi_mssv"
        android:layout_width="89dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cham_thi_mssv_text"
        android:layout_marginStart="45dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/cham_thi_mssv_textview"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button_2"
        android:fontFamily="@font/roboto_regular"
        android:gravity="left|center"
        android:paddingStart="15dp"
        android:hint="Nhập mã sinh viên"
        android:text=""
        android:textColor="#6E7591"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cham_thi_mssv" />
    <ImageView
        android:id="@+id/cham_thi_ho_va_ten"
        android:layout_width="52dp"
        android:layout_height="17dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cham_thi_ho_va_ten_text"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cham_thi_mssv_textview"/>
    <EditText
        android:id="@+id/cham_thi_ho_va_ten_textview"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_2"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#6E7591"
        android:textSize="16sp"
        android:hint="Nhập họ và tên"
        android:text=""
        android:paddingStart="15dp"
        android:gravity="left|center"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cham_thi_ho_va_ten"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/cham_thi_diem"
        android:layout_width="29dp"
        android:layout_height="16dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cham_thi_diem_text"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cham_thi_ho_va_ten_textview"/>
    <EditText
        android:id="@+id/cham_thi_diem_text"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:background="@drawable/round_button_2"
        android:fontFamily="@font/roboto_regular"
        android:hint="Nhập điểm"
        android:text=""
        android:paddingStart="15dp"
        android:textColor="#6E7591"
        android:textSize="16sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cham_thi_diem" />

    <ImageView
        android:id="@+id/cham_thi_diem_chu"
        android:layout_width="55dp"
        android:layout_height="16dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cham_thi_ho_va_ten_textview"
        app:srcCompat="@drawable/cham_thi_diem_chu_text" />

    <EditText
        android:id="@+id/cham_thi_diem_chu_text"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:background="@drawable/round_button_2"
        android:fontFamily="@font/roboto_regular"
        android:hint="Nhập điểm chữ"
        android:textColor="#6E7591"
        android:textSize="16sp"
        android:text=""
        android:paddingStart="15dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cham_thi_diem_chu" />

    <ImageView
        android:id="@+id/cham_thi_ghi_chu"
        android:layout_width="42dp"
        android:layout_height="15dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cham_thi_ghi_chu_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cham_thi_diem_text"/>
    <EditText
        android:id="@+id/cham_thi_ghi_chu_text_view"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_2"
        android:fontFamily="@font/roboto_regular"
        android:hint="Nhập ghi chú"
        android:textColor="#6E7591"
        android:textSize="16sp"
        android:text=""
        android:paddingStart="15dp"
        android:gravity="left|center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cham_thi_ghi_chu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>