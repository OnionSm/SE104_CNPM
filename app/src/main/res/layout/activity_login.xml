<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_screen_shape_1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:layout_marginTop="250dp"
        android:background="@drawable/login_screen_shape_2"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="60dp"
        android:background="@drawable/login_screen_shape_3"
        android:scaleType="centerInside" />

    <EditText
        android:id="@+id/login_screen_edittext_1"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/login_screen_shape_4"
        android:inputType="textEmailAddress"
        android:padding="0dp"
        android:scaleType="centerInside"
        tools:ignore="SpeakableTextPresentCheck" />


    <EditText
        android:id="@+id/login_screen_edittext_2"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/login_screen_shape_4"
        android:inputType="textPassword"
        android:scaleType="centerInside"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/login_screen_button_1"
        android:layout_width="186dp"
        android:layout_height="55dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="570dp"
        android:backgroundTint="#1C67FB"
        android:scaleType="centerInside"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/dang_nhap_text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="120dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Đăng nhập"
        android:textStyle="bold"
        android:textColor="#FF0000FD"
        android:textSize="28sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Email"
        android:textColor="#FF0000FD"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="450dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Mật khẩu"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#FF0000FD"
        android:textSize="18sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/login_screen_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="655dp"
        android:layout_marginBottom="-1dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Quên mật khẩu?"
        android:textColor="#FF0000FD"
        android:textSize="14sp"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="85dp"
        android:layout_gravity="top|left"
        android:scaleType="centerInside"
        android:src="@drawable/login_screen_image_1" />
</FrameLayout>
