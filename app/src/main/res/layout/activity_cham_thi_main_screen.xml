<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cham_diem_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChamThiMainScreen">

    <ImageButton
        android:id="@+id/cham_diem_icon_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/cau_hoi_guideline_1_4"
        app:layout_constraintEnd_toEndOf="@id/cau_hoi_guideline_1_2"
        app:layout_constraintStart_toStartOf="@id/cau_hoi_guideline_1_1"
        app:layout_constraintTop_toTopOf="@id/cau_hoi_guideline_1_3"
        app:srcCompat="@drawable/them_cau_hoi_image_view_1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_1_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.082"/>


    <ImageView
        android:id="@+id/tao_cau_hoi_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/cau_hoi_guideline_2_4"
        app:layout_constraintEnd_toEndOf="@id/cau_hoi_guideline_2_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/cau_hoi_guideline_2_1"
        app:layout_constraintTop_toTopOf="@id/cau_hoi_guideline_2_3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cham_diem_text" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.372"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.054"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.078"/>


    <ImageButton
        android:id="@+id/cham_diem_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/cau_hoi_guideline_3_2"
        app:layout_constraintDimensionRatio="1.8:1"

        app:layout_constraintEnd_toEndOf="@id/cau_hoi_guideline_3_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cau_hoi_guideline_3_1"
        app:srcCompat="@drawable/cham_diem_button" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.76"/>


    <ImageButton
        android:id="@+id/ds_bai_cham_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/cau_hoi_guideline_4_3"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="@id/cau_hoi_guideline_4_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cau_hoi_guideline_4_1"
        app:srcCompat="@drawable/ds_bai_cham_button" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_4_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.39"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_4_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_4_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56"/>

    <ImageButton
        android:id="@+id/lop_hoc_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/cau_hoi_guideline_5_3"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="@id/cau_hoi_guideline_5_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cau_hoi_guideline_5_1"
        app:srcCompat="@drawable/lop_hoc_button"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_5_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_5_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cau_hoi_guideline_5_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.71"/>

</androidx.constraintlayout.widget.ConstraintLayout>