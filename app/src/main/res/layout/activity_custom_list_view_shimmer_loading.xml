<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CustomListView">


    <TextView
        android:id="@+id/custom_list_view_stt"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:background="#C2C2C2"
        android:fontFamily="@font/roboto_regular"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/custom_list_view_ten_mon"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:background="#C2C2C2"
        android:textSize="18sp"
        android:textColor="#2F6BFF"
        android:fontFamily="@font/roboto_regular"
        android:gravity="start"
        app:layout_constraintStart_toEndOf="@+id/custom_list_view_stt"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/custom_list_view_de_thi"
        android:layout_width="235dp"
        android:layout_height="85dp"
        android:background="#C2C2C2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toEndOf="@+id/custom_list_view_stt"
        app:layout_constraintTop_toBottomOf="@id/custom_list_view_ten_mon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize = "15sp"/>

    <TextView
        android:id="@+id/custom_list_view_do_kho"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="25dp"
        android:background="#C2C2C2"
        android:textColor="#2F6BFF"
        android:fontFamily="@font/roboto_regular"
        android:gravity="end"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/custom_list_view_ngay_tao"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="5dp"
        android:background="#C2C2C2"
        android:textColor="#2F6BFF"
        android:fontFamily="@font/roboto_regular"
        android:textSize = "12sp"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/custom_list_view_do_kho"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>