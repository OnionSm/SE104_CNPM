<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_screen_shape_1">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:layout_marginTop="350dp"
        android:background="@drawable/login_screen_shape_2"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/login_screen_shape_3"
        android:scaleType="centerInside" />

    <EditText
        android:id="@+id/login_screen_edittext_1"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="510dp"
        android:background="@drawable/login_screen_shape_4"
        android:inputType="textEmailAddress"
        android:padding="0dp"
        android:scaleType="centerInside"
        tools:ignore="SpeakableTextPresentCheck" />


    <EditText
        android:id="@+id/login_screen_edittext_2"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/login_screen_shape_4"
        android:inputType="textPassword"
        android:padding="0dp"
        android:scaleType="centerInside"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/login_screen_button_1"
        android:layout_width="186dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="680dp"
        android:backgroundTint="#1C67FB"
        android:scaleType="centerInside"
        android:text="ĐĂNG NHẬP"
        android:textColor="#FFFFFFFF"
        android:textSize="16dp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="395dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Đăng nhập"
        android:textStyle="bold"
        android:textColor="#FF0000FD"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="485dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Email"
        android:textColor="#FF0000FD"
        android:textSize="18dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="565dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Mật khẩu"
        android:textColor="#FF0000FD"
        android:textSize="18dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/login_screen_textview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="795dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Quên mật khẩu?"
        android:textColor="#FF0000FD"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="74dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="172dp"
        android:layout_gravity="top|left"
        android:scaleType="centerInside"
        android:src="@drawable/login_screen_image_1" />
</FrameLayout>
