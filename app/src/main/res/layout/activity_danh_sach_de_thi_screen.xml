<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DanhSachDeThiScreen">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/ds_cau_hoi_shimmer_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:shimmer_duration="2000"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ds_cau_hoi_guideline_3_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>
            <include layout = "@layout/activity_ds_de_thi_da_tao_item_shimmer_loading"/>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <ImageButton
        android:id="@+id/ds_danh_sach_cau_hoi_icon_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/ds_cau_hoi_guideline_1_4"
        app:layout_constraintEnd_toEndOf="@id/ds_cau_hoi_guideline_1_2"
        app:layout_constraintStart_toStartOf="@id/ds_cau_hoi_guideline_1_1"
        app:layout_constraintTop_toTopOf="@id/ds_cau_hoi_guideline_1_3"
        app:srcCompat="@drawable/them_cau_hoi_image_view_1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_1_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.105"/>


    <ImageView
        android:id="@+id/ds_ds_cau_hoi_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/ds_cau_hoi_guideline_2_4"
        app:layout_constraintEnd_toEndOf="@id/ds_cau_hoi_guideline_2_2"
        app:layout_constraintStart_toStartOf="@id/ds_cau_hoi_guideline_2_1"
        app:layout_constraintTop_toTopOf="@id/ds_cau_hoi_guideline_2_3"
        app:srcCompat="@drawable/danh_sach_de_thi_text" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.14"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.103"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/danh_sach_cau_hoi_recycle_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="#2F6BFF"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/ds_cau_hoi_guideline_3_1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ds_cau_hoi_guideline_3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"/>
</androidx.constraintlayout.widget.ConstraintLayout>