<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tc_de_thi_custom_lv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TraCuuDeThiListView">

    <TextView
        android:id="@+id/cs_lv_ten_mon"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center|left"
        android:text="Nhập môn công nghệ phần mềm"
        android:textColor="#2F6BFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/cs_lv_thoi_luong"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:fontFamily="@font/roboto_regular"
        android:text="01"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:gravity="center|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cs_lv_ten_mon"/>

    <TextView
        android:id="@+id/cs_lv_ma_de"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center|right"
        android:text="01"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/cs_lv_ngay_thi"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center|right"
        android:text="01"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cs_lv_ma_de"  />


</androidx.constraintlayout.widget.ConstraintLayout>