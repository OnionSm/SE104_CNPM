<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thong_bao_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongBaoScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!-- Phần màn hình chia làm hai, đặt trên thanh công cụ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <!-- Phần thứ nhất -->

        <!-- Phần thứ hai -->
        <FrameLayout
            android:id="@+id/phan_mot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="148dp"
                android:layout_height="70dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="bottom|left"
                app:srcCompat="@drawable/thong_bao__text" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="47dp"
                android:layout_height="44dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/bell_full_fill" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/phan_hai"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Cặp thông báo và thời gian thứ nhất -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="147dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Thông báo 1" />

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="149dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="10:00 AM" />
                </LinearLayout>

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:background="@color/light_blue" />
                <!-- Cặp thông báo và thời gian thứ hai -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="147dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Thông báo 1" />

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="149dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="10:00 AM" />
                </LinearLayout>

                <View
                    android:layout_width="350dp"
                    android:layout_height="2dp"
                    android:background="@color/light_blue" />
                <!-- Cặp thông báo và thời gian thứ ba -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="147dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Thông báo 1" />

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="149dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="10:00 AM" />
                </LinearLayout>

                <View
                    android:layout_width="350dp"
                    android:layout_height="2dp"
                    android:background="@color/light_blue" />
                <!-- Cặp thông báo và thời gian thứ 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="147dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Thông báo 1" />

                    <TextView
                        android:layout_width="3dp"
                        android:layout_height="149dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="10:00 AM" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>




    </LinearLayout>

    <!-- LinearLayout cho thanh công cụ, đặt dưới cùng -->
    <LinearLayout
        android:id="@+id/thanh_cong_cu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bar"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/thong_bao_full_fill_layer" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/home_not_full_fill_layer" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ho_so_layer" />

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>