<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lop_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/malop"
        android:layout_width="320dp"
        android:layout_height="25dp"
        android:text="Title"
        android:textSize="18sp"
        android:textColor="#2F6BFF"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tenlop"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/malop"
        android:text = "Title"
        android:textSize = "15sp"/>
    <TextView
        android:id="@+id/hocky"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tenlop"
        android:text = "Title"
        android:textSize = "15sp"/>

    <TextView
        android:id="@+id/namhoc"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hocky"
        android:text = "Title"
        android:textSize = "15sp"/>

    <TextView
        android:id="@+id/siso"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/namhoc"

        android:text = "Title"
        android:textSize = "15sp"/>
    <TextView
        android:id="@+id/magvcham"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siso"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text = "Title"
        android:textSize = "15sp"/>
    <TextView
        android:id="@+id/mamonhoc"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginEnd="18dp"
        android:text = ""
        android:textColor="#2F6BFF"
        android:fontFamily="@font/roboto_regular"
        android:textSize = "12sp"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>