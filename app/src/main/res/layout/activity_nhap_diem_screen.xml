<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nhapdiemscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NhapDiemScreen">

    <ImageButton
        android:id="@+id/nhap_diem_icon_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/nhap_diem_guideline_1_4"
        app:layout_constraintEnd_toEndOf="@id/nhap_diem_guideline_1_2"
        app:layout_constraintStart_toStartOf="@id/nhap_diem_guideline_1_1"
        app:layout_constraintTop_toTopOf="@id/nhap_diem_guideline_1_3"
        app:srcCompat="@drawable/them_cau_hoi_image_view_1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nhap_diem_guideline_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nhap_diem_guideline_1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nhap_diem_guideline_1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nhap_diem_guideline_1_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.105"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Mã lớp: SE104.022"
        android:textSize = "22dp"
        android:gravity="center"
        android:textColor="#0000FD"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/nhap_diem_guideline_1_4"
        app:layout_constraintEnd_toEndOf="@id/nhap_diem_guideline_2_2"
        app:layout_constraintStart_toStartOf="@id/nhap_diem_guideline_2_1"
        app:layout_constraintTop_toTopOf="@id/nhap_diem_guideline_1_3"
        app:srcCompat="@drawable/them_cau_hoi_image_view_1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nhap_diem_guideline_2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nhap_diem_guideline_2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cham_thi_recycle_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="#2F6BFF"
        android:dividerHeight="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nhap_diem_guideline_3_1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/nhap_diem_guideline_3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13"/>


</androidx.constraintlayout.widget.ConstraintLayout>